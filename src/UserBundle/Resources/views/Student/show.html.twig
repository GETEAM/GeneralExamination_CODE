{% extends 'UserBundle:Student:layout.html.twig' %}

{% block title %}查看学生信息—基本信息设置—考试管理{% endblock %}

{% block right -%}
    <h1>
        查看学生信息
        <a href="{{ path('student_index') }}">
            <img src="{{ asset('images/manage/back.png') }}" width="12" height="12" alt="返回学生信息列表" title="返回学生信息列表">
            <span>返回学生信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('student_edit', { 'id': student.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
            编辑
        </a>
        <a href="javascript:void(0)" class="delete-btn btn btn-common-action" student-id="{{ student.id }}">
            <img src="{{ asset('images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
            删除
        </a>
        <div id="delete-dialog_{{ student.id }}" class="delete-dialog" title="删除确认" student-id={{ student.id }} hidden>
            <p>你确定要删除   <span class="dialog-item-key">{{student.name}}</span>   的年级信息吗？</p>
        </div>
    </div>
    <table class="common-table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>学号</th>
                <td>{{ student.studentId }}</td>
            </tr>
            <tr>
                <th>姓名</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>学院</th>
                <td>{{ student.academy }}</td>
            </tr>
            <tr>
                <th>年级</th>
                <td>{{ student.grade }}</td>
            </tr>
			<tr>
                <th>邮箱</th>
                <td>{{ student.email }}</td>
            </tr>
            <tr>
                <th>电话</th>
                <td>{{ student.telephone }}</td>
            </tr>
            <tr>
                <th>密码</th>
                <td>{{ student.password }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manage/user-manage/student_show.js') }}"></script>
{% endblock %}