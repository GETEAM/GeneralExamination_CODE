{% extends 'UserBundle:Student:layout.html.twig' %}

{% block title %}修改学生信息学生—基本信息设置—考务管理{% endblock %}

{% block right -%}
    <h1>
        修改学生信息
        <a href="{{ path('student_index') }}">       
            <img src="{{  asset('images/manage/back.png')  }}" width="12" height="12" alt="返回学生信息列表" title="返回学生信息列表">
            <span>返回学生信息列表</span>
        </a>
    </h1>
    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_row(edit_form.student_id, {'attr': {'placeholder': '请输入学号', 'autocomplete': 'off'} }) }}
        {{ form_row(edit_form.name, {'attr': {'placeholder': '请输入姓名', 'autocomplete': 'off'} }) }}
        {{ form_row(edit_form.email, {'attr': {'placeholder': '请输入邮箱', 'autocomplete': 'off'} }) }}
        {{ form_row(edit_form.telephone, {'attr': {'placeholder': '请输入手机号码', 'autocomplete': 'off'} }) }}
        {{ form_row(edit_form.password, {'attr': {'placeholder': '请输入密码', 'autocomplete': 'off'} }) }}
        {{ form_row(edit_form.grade) }}
        {{ form_row(edit_form.academy) }}
        {{ form_row(edit_form.save, {'attr': {'class': 'btn'} }) }}

    {{ form_end(edit_form, {'render_rest': true}) }}

{% endblock %}

