{%block header%} {%endblock%}
{%block footer%} {%endblock%}

{%block main%}

    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <head>
        <meta charset="UTF-8">
        <title>登录</title>
        <script src="js/common/jquery-2.1.3.js"></script>
        <link rel="stylesheet" type="text/css" href="css/common/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="css/common/login.css">
        <style type="text/css">

        </style>
    </head>
    <body>
    <div class="logo"><span class="logo1"><a href="http://ustc.edu.cn">USTC</a> | 在线通用考试系统</span></div>
    <div id="container">
        <div id="bg">
            <div id="login">
                <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}" />
                    <div class="title" class="form-group">
                        <span>系统登录 || LOGIN</span>
                    </div>
                    <div class="form-group ">
                        <label for="username" class=" col-sm-3 control-label label">&nbsp;用户名:</label>
                        <div class="col-sm-8">
                            <input type="text" id="username" name="_username" value="{{ lastUsername }}" required="required" placeholder="请输入用户名" class="form-control input-lg"/>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-3 control-label label">密&nbsp;&nbsp;码:</label>
                        <div class="col-sm-8">
                            <input type="password" id="password" name="_password" required="required" placeholder="请输入密码" class="form-control input-lg" />
                        </div>

                    </div>
                    <div id="info" class="col-sm-offset-4 col-sm-8">用户名或密码不正确</div>
                    <div class="form-group radio">
                        <div class="col-sm-offset-2 col-sm-10">

                            <label class="radio-inline label_form"><input type="radio" name="role" value="student">学生</label>
                            <label class="radio-inline label_form"><input type="radio" name="role" value="teacher">教师</label>
                            <label class="radio-inline label_form"><input type="radio" name="role" value="manager" checked>管理员</label>
                        </div>
                    </div>
                    <div class="form-group checkbox">
                        <div class="col-sm-offset-1 col-sm-11">
                            <label class="checkbox-inline rem_paswd label_form"><input type="checkbox" id="remember_me" name="_remember_me" value="on" checked>记住密码</label>
                        </div>
                    </div>

                    <div class="form-group button">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button class="btn btn-primary" type="submit">登录</button>
                            <button class="btn btn-primary reset_btn" type="reset">重置</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="footer">
        <span class="foot">©中国科学技术大学</span>
    </div>
    </body>
{%endblock%}