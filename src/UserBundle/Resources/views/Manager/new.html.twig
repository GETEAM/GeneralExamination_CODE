{% extends 'UserBundle:Manager:layout.html.twig' %}

{% block title %}添加教师—基本信息设置—考务管理{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/manage/user-manage/manager_new.css') }}"/>
{% endblock %}

{% block right -%}


    <h1>
        添加管理员信息
        <a href="{{ path('manager_index') }}">
            <img src="{{ asset('images/manage/back.png') }}" width="12" height="12" alt="返回考场信息列表" title="返回考场信息列表">
            <span>返回考场信息列表</span>
        </a>
    </h1>
    <div class="tab" id="manager-add-tab">
        <div class="tab-title" name="1">
            <ul>
                <li>
                    <a href="javascript:void(0)" class="btn btn-common-action add-selected" name="#single-add">
                        <img src="{{ asset('images/manage/add.png') }}" width="20" height="20" alt="编辑" title="编辑">
                        单个添加教师信息
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)" class="btn btn-common-action no-selected" name="#import">
                        <img src="{{ asset('images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
                        批量导入教师信息
                    </a>
                </li>
            </ul>   
        </div>

        <div class="tab-content">
            <div id="single-add">
                {{ form_start(new_form,{'attr': {'class': 'add-user-form single-teacher-add'}} ) }}
                    {{ form_errors(new_form) }}

                    {{ form_row(new_form.username, {'attr': {'placeholder': '请输入教师工号', 'autocomplete': 'off'} }) }}
                    {{ form_row(new_form.name, {'attr': {'placeholder': '请输入姓名', 'autocomplete': 'off'} }) }}
                    {{ form_row(new_form.email, {'attr': {'placeholder': '请输入邮箱', 'autocomplete': 'off'} }) }}
                    {{ form_row(new_form.telephone, {'attr': {'placeholder': '请输入手机号码', 'autocomplete': 'off'} }) }}
                    {{ form_row(new_form.roles) }}
                    {{ form_row(new_form.plainPassword) }}
                    {{ form_row(new_form.save, {'attr': {'class': 'btn'} }) }}

                {{ form_end(new_form, {'render_rest': true}) }}

            </div>

            <div id="import">
                <form class="add-user-form import-form" action="#" method="post">
                    <label for="teacher-information">选择文件</label>
                    <input type="file" id="teacher-information" placeholder="请选择导入文件" />
                    <p class="help-block">上传的文件类型只能是：.xls、.doc</p>
                    <button class="btn">确定导入</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manage/user-manage/manager_new.js') }}"></script>
{% endblock %}
