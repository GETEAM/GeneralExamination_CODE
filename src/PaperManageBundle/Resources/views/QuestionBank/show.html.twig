{% extends '::base.html.twig' %}

{% block body -%}
    <h1>QuestionBank</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Stem</th>
                <td>{{ entity.stem }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ entity.length }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ entity.options }}</td>
            </tr>
            <tr>
                <th>Shuffle</th>
                <td>{{ entity.shuffle }}</td>
            </tr>
            <tr>
                <th>Preshow</th>
                <td>{{ entity.preShow }}</td>
            </tr>
            <tr>
                <th>Questions</th>
                <td>{{ entity.questions }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('questionbank') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('questionbank_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
