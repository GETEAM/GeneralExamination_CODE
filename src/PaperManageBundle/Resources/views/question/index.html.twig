{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Question list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Questiontypeid</th>
                <th>Testmodes</th>
                <th>Questioncontent</th>
                <th>Score</th>
                <th>Usagecounter</th>
                <th>Createtime</th>
                <th>Questionduration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manage_question_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.questionTypeId }}</td>
                <td>{{ entity.testModes }}</td>
                <td>{{ entity.questionContent }}</td>
                <td>{{ entity.score }}</td>
                <td>{{ entity.usageCounter }}</td>
                <td>{% if entity.createTime %}{{ entity.createTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.questionDuration }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manage_question_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_question_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manage_question_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
