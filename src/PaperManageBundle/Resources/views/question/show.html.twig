{% extends 'PaperManageBundle:Question:layout.html.twig' %}

{% block title %}查看试题信息—试卷管理{% endblock %}

{% block loading %}正在加载指定试题的详细信息……{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/manage/paper-manage/question-type_show.css') }}"/>
{% endblock %}

{% block right -%}
    <h1>
        试题类型预览
        <a href="{{ path('question_index') }}">
            <img src="{{ asset('images/manage/back.png') }}" width="12" height="12" alt="返回试题列表" title="返回试题列表">
            <span>返回试题列表</span>
        </a>
    </h1>
    {% if question %}
        <div class="common-action">
            <a href="{{ path('question_edit', { 'id': question.id }) }}" class="btn btn-common-action">
                <img src="{{ asset('images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
                编辑
            </a>
            <a href="javascript:void(0)" class="btn btn-common-action delete-btn" question-id="{{ question.id }}">
                <img src="{{  asset('images/manage/delete.png')  }}" width="20" height="20" alt="删除类型" title="删除类型">
                删除
            </a>
            <div id="delete-dialog_{{ question.id }}" class="delete-dialog" title="删除确认" question-id={{ question.id }} hidden>
                <p>确定要删除试题   <span class="dialog-item-key">{{question.questionName}}</span>   吗？</p>
            </div>
        </div>
    {% endif %}
    <div class='question_show'>
        {% if question=="" %}
            <div class='question_title'>您指定的类型信息不存在，请您核实类型编号！</div>
        {% else %}
            <div class='question_title'>{{ question.questionName }}</div>
            <div id="question_content_{{ question.id }}" class="question_content" hidden>{{ question.questionContent }}</div>
            <div id="question_{{ question.id }}" class="question_sample"></div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manage/paper-manage/question_show.js') }}"></script>
{% endblock %}

