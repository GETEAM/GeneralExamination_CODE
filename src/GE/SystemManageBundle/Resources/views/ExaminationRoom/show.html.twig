{% extends 'GESystemManageBundle:ExaminationRoom:layout.html.twig' %}

{% block title %}查看考场信息—基本信息设置—系统管理{% endblock %}

{% block right -%}
    <h1>
          查看考场信息
        <a href="{{ path('examinationroom_index') }}">
            <img src="{{ asset('bundles/app/images/manage/back.png') }}" width="12" height="12" alt="返回考场信息列表" title="返回考场信息列表">
            <span>返回考场信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('examinationroom_edit', { 'id': examinationroom.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('bundles/app/images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
            编辑
        </a>
        <a href="{{ path('examinationroom_delete', { 'id': examinationroom.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('bundles/app/images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
            删除
        </a>
    </div>
    <table class="common-table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ examinationroom.id }}</td>
            </tr>
            <tr>
                <th>考场名称</th>
                <td>{{ examinationroom.roomName }}</td>
            </tr>
            <tr>
                <th>机器行数</th>
                <td>{{ examinationroom.row }}</td>
            </tr>
            <tr>
                <th>机器列数</th>
                <td>{{ examinationroom.col }}</td>
            </tr>
            <tr>
                <th>可用机器数</th>
                <td>{{ examinationroom.availableMachineNumber }}</td>
            </tr>
            <tr>
                <th>故障机器列表</th>
                <td>{{ examinationroom.faultMachine }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

