{% extends 'GESystemManageBundle:ExaminationRoom:layout.html.twig' %}

{% block title %}考场信息管理—系统管理{% endblock %}

{% block right -%}
    <h1>
        考场信息列表
    </h1>
    <div class="wait-load">
        <div class="wait-load-image">
            <img src="{{  asset('bundles/app/images/manage/nowloading.gif')  }}" alt="正在加载" title="正在加载"/>
            <p>正在加载考场信息列表</p>
        </div>
    </div>
    <div class="common-action">
        <a href="{{ path('examinationroom_new') }}" class="btn btn-common-action">
            <img src="{{  asset('bundles/app/images/manage/add.png')  }}" width="20" height="20" alt="添加考场信息" title="添加考场信息">
            添加考场信息
        </a>
        <a href="#" class="btn btn-common-action">
            <img src="{{  asset('bundles/app/images/manage/deletes.png')  }}" width="20" height="20" alt="批量删除" title="批量删除">
            批量删除
        </a>
    </div>
    <table class="common-table examination-rooms">
        <thead>
            <tr>
                <th>编号</th>
                <th>考场名</th>
                <th>机器行数</th>
                <th>机器列数</th>
                <th>可用机器数</th>
                <th>故障机器</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% if examinationrooms|length == 0 %}
            <tr>
                <td colspan=7>尚不存在考场信息，请您添加！</td>
            </tr>
        {% else %}
            {% for examinationroom in examinationrooms %}
                <tr>
                    <td>
                        <input type="checkbox" name="examination-romms" hidden />
                        <a href="{{ path('examinationroom_show', { 'id': examinationroom.id }) }}">{{ examinationroom.id }}</a>
                    </td>
                    <td>{{ examinationroom.roomName }}</td>
                    <td>{{ examinationroom.row }}</td>
                    <td>{{ examinationroom.col }}</td>
                    <td>{{ examinationroom.availableMachineNumber }}</td>
                    <td class="fault-machine-td">{{ examinationroom.faultMachine }}</td>
                    <td>
                         <a href="{{ path('examinationroom_show', { 'id': examinationroom.id }) }}">
                            <img src="{{  asset('bundles/app/images/manage/view.png')  }}" width="20" height="20" alt="查看" title="查看">
                        </a>
                        <a href="{{ path('examinationroom_edit', { 'id': examinationroom.id }) }}">
                            <img src="{{  asset('bundles/app/images/manage/edit.png')  }}" width="20" height="20" alt="编辑" title="编辑">
                        </a>
                        <a href="javascript:void(0)" class="delete-btn" examinationroom-id="{{ examinationroom.id }}">
                            <img src="{{  asset('bundles/app/images/manage/delete.png')  }}" width="20" height="20" alt="删除" title="删除">
                        </a>
                        <div id="examinationroom_{{ examinationroom.id }}" class="delete-dialog" title="删除确认" examinationroom-id={{ examinationroom.id }} hidden>
                            <p>你确定要删除   <span class="dialog-item-key">{{examinationroom.roomName}}</span>   的考场信息吗？</p>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
    <div class="show-fault-machine">
        <table>

        </table>
    </div>
{% endblock %}

