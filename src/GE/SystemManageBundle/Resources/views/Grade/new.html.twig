{% extends 'GESystemManageBundle::system-manage.html.twig' %}

{% block title %}添加年级—基本信息设置—系统管理{% endblock %}

{% block right -%}
    <h1>
        添加年级
        <a href="{{ path('grade') }}">
            {% image '@AppBundle/Resources/public/images/back.png' %}
                <img src="{{ asset_url }}" width="12" height="12" alt="返回年级信息列表" title="返回年级信息列表">
            {% endimage %}
            <span>返回年级信息列表</span>
        </a>
    </h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.grade, {'attr': {'placeholder': '请输入年级代号', 'autocomplete': 'off'} }) }}
        {{ form_row(form.description, {'attr': {'placeholder': '请输入年级描述信息', 'autocomplete': 'off'} }) }}
        {{ form_row(form.submit, {'attr': {'class': 'btn' } }) }}

    {{ form_end(form, {'render_rest': true}) }}

{% endblock %}
