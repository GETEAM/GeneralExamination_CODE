{% extends 'GESystemManageBundle:Grade:layout.html.twig' %}

{% block title %}查看年级信息—基本信息设置—系统管理{% endblock %}

{% block right -%}
    <h1>
        查看年级信息
        <a href="{{ path('grade_index') }}">
            <img src="{{ asset('bundles/app/images/manage/back.png') }}" width="12" height="12" alt="返回年级信息列表" title="返回年级信息列表">
            <span>返回年级信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('grade_edit', { 'id': grade.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('bundles/app/images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
            编辑
        </a>
        <a href="javascript:void(0)" class="delete-btn btn btn-common-action " grade-id="{{ grade.id }}"> 
            <img src="{{ asset('bundles/app/images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
            删除
        </a>
        <div id="grade_{{ grade.id }}" class="delete-dialog" title="删除确认" grade-id={{ grade.id }} hidden>
            <p>你确定要删除   <span class="dialog-item-key">{{grade.description}}</span>   的年级信息吗？</p>
        </div>
    </div>
    <table class="common-table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ grade.id }}</td>
            </tr>
            <tr>
                <th>年级代号</th>
                <td>{{ grade.grade }}</td>
            </tr>
            <tr>
                <th>详细描述</th>
                <td>{{ grade.description }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
