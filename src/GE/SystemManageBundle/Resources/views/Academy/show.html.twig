{% extends 'GESystemManageBundle::system-manage.html.twig' %}

{% block title %}查看学院信息—基本信息设置—系统管理{% endblock %}

{% block right -%}
    <h1>
        查看学院信息
        <a href="{{ path('academy_index') }}">
            <img src="{{ asset('bundles/app/images/manage/back.png') }}" width="12" height="12" alt="返回学院信息列表" title="返回学院信息列表">
            <span>返回学院信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('academy_edit', { 'id': academy.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('bundles/app/images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
            编辑
        </a>
        <a href="{{ path('academy_delete', { 'id': academy.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('bundles/app/images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
            删除
        </a>
    </div>
    <table class="common-table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ academy.id }}</td>
            </tr>
            <tr>
                <th>学院代号</th>
                <td>{{ academy.academyID }}</td>
            </tr>
            <tr>
                <th>学院名称</th>
                <td>{{ academy.academyName }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
