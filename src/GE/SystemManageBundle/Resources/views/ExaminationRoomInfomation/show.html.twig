{% extends 'GESystemManageBundle:GradeInformation:grade.html.twig' %}

{% block title %}查看考场信息—基本信息设置—系统管理{% endblock %}

{% block right -%}
    <h1>
        查看考场信息
        <a href="{{ path('examinationroominfomation') }}">
            {% image '@AppBundle/Resources/public/images/back.png' %}
                <img src="{{ asset_url }}" width="12" height="12" alt="返回考场信息列表" title="返回考场信息列表">
            {% endimage %}
            <span>返回考场信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('examinationroominfomation_edit', { 'id': entity.id }) }}" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/edit.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="编辑" title="编辑">
            {% endimage %}
            编辑
        </a>
        <a href="{{ path('examinationroominfomation_delete', { 'id': entity.id }) }}" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/delete.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="删除" title="删除">
            {% endimage %}
            删除
        </a>
    </div>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>考场名称</th>
                <td>{{ entity.roomName }}</td>
            </tr>
            <tr>
                <th>机器行数</th>
                <td>{{ entity.row }}</td>
            </tr>
            <tr>
                <th>机器列数</th>
                <td>{{ entity.list }}</td>
            </tr>
            <tr>
                <th>可用机器数</th>
                <td>{{ entity.availableMachineNumber }}</td>
            </tr>
            <tr>
                <th>故障机器列表</th>
                <td>{{ entity.faultMachine }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

