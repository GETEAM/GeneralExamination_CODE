{% extends 'GEExaminationManageBundle::examination-manage.html.twig' %}

{% block title %}教师信息管理—考务管理{% endblock %}

{% block right %}
    <h1>
        教师信息列表
    </h1>
    <div class="common-find">
        <ul>
            <li>教师账号：<input type="text" name="managerName" class="common-findByText"></li>
            <li>教师姓名：<input type="text" name="managerId " class="common-findByText"></li>
            <li>教师权限：<input type="text" name="managerRole " class="common-findByText"></li>
            <li><a href="#">
            {% image '@AppBundle/Resources/public/images/view.png' %}
                <img src="{{ asset_url }}"  alt="查找" title="查找" />
            {% endimage %}
                查找</a></li>
        </ul> 
    </div>

    <div class="common-action">
        <a href="{{ path('manager_new') }}" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/add.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="添加教师信息" title="添加教师信息">
            {% endimage %}
            添加教师信息
        </a>
        <a href="#" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/edit.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="批量修改" title="批量修改">
            {% endimage %}
            批量修改
        </a>
        <a href="#" onclick="multiDelete()" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/deletes.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="批量删除" title="批量删除">
            {% endimage %}
            批量删除
        </a>
    </div>
    <table class="common-table grades">
        <thead>
            <tr>
                <th>编号</th>
                <th>工号</th>
                <th>姓名</th>
                <th>电话</th>
                <th>权限</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>

{% if managers|length == 0 %}
            <tr>
                <td colspan=4>尚不存在教师信息，请您添加！</td>
            <tr>
        {% else %}
            {% for manager in managers %}
                <tr>
                    <td>
                        <input type="checkbox" name= managers" hidden />
                        <a href="#">{{ manager.id }}</a>
                    </td>
                    <td>{{ manager.username }}</td>
                    <td>{{ manager.name }}</td>
                    <td>{{ manager.telephone }}</td>
                    <td>{{ manager.email }}</td>
                    <td>
                        <a href="#">
                            {% image '@AppBundle/Resources/public/images/view.png' %}
                                <img src="{{ asset_url }}" width="20" height="20" alt="查看" title="查看">
                            {% endimage %}
                        </a>
                        <a href="{{ path('manager_edit', { 'id': manager.id }) }}">
                            {% image '@AppBundle/Resources/public/images/edit.png' %}
                                <img src="{{ asset_url }}" width="20" height="20" alt="编辑" title="编辑">
                            {% endimage %}
                        </a>
                        <a href="{{ path('manager_delete', { 'id': manager.id }) }}">
                            {% image '@AppBundle/Resources/public/images/delete.png' %}
                                <img src="{{ asset_url }}" width="20" height="20" alt="删除" title="删除">
                            {% endimage %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}



        
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 
        '@GESystemManageBundle/Resources/public/js/common.js'        
        '@GESystemManageBundle/Resources/public/js/grade_index.js'
         %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
