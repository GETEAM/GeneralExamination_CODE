{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ entity.UserID }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.UserName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.Email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.Password }}</td>
            </tr>
            <tr>
                <th>Academicid</th>
                <td>{{ entity.academicID }}</td>
            </tr>
            <tr>
                <th>Gradeid</th>
                <td>{{ entity.gradeID }}</td>
            </tr>
            <tr>
                <th>Telenumber</th>
                <td>{{ entity.telenumber }}</td>
            </tr>
            <tr>
                <th>Authority</th>
                <td>{{ entity.authority }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
