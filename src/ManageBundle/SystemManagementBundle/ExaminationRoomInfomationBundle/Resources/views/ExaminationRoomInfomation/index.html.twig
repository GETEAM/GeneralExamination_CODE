{% extends 'ManageBundleSystemManagementBundleGradeInformationBundle:GradeInformation:grade.html.twig' %}

{% block title %}年级信息管理—系统管理{% endblock %}

{% block right -%}
    <h1>
        考场信息列表
    </h1>
    <div class="common-action">
        <a href="{{ path('examinationroominfomation_new') }}" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/add.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="添加年级信息" title="添加年级信息">
            {% endimage %}
            添加考场信息
        </a>
        <a href="#" class="btn btn-common-action">
            {% image '@AppBundle/Resources/public/images/deletes.png' %}
                <img src="{{ asset_url }}" width="20" height="20" alt="批量删除" title="批量删除">
            {% endimage %}
            批量删除
        </a>
    </div>
    <table class="examination-romms">
        <thead>
            <tr>
                <th>编号</th>
                <th>考场名</th>
                <th>机器行数</th>
                <th>机器列数</th>
                <th>可用机器数</th>
                <th>故障机器</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('examinationroominfomation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.roomName }}</td>
                <td>{{ entity.row }}</td>
                <td>{{ entity.list }}</td>
                <td>{{ entity.availableMachineNumber }}</td>
                <td>{{ entity.faultMachine }}</td>
                <td>
                    <a href="{{ path('examinationroominfomation_show', { 'id': entity.id }) }}">
                        {% image '@AppBundle/Resources/public/images/view.png' %}
                            <img src="{{ asset_url }}" width="20" height="20" alt="查看" title="查看">
                        {% endimage %}
                    </a>
                    <a href="{{ path('examinationroominfomation_edit', { 'id': entity.id }) }}">
                        {% image '@AppBundle/Resources/public/images/edit.png' %}
                            <img src="{{ asset_url }}" width="20" height="20" alt="编辑" title="编辑">
                        {% endimage %}
                    </a>
                    <a href="{{ path('examinationroominfomation_delete', { 'id': entity.id }) }}">
                        {% image '@AppBundle/Resources/public/images/delete.png' %}
                            <img src="{{ asset_url }}" width="20" height="20" alt="删除" title="删除">
                        {% endimage %}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
