{% extends 'SystemManageBundle:Academy:layout.html.twig' %}

{% block title %}查看学院信息—基本信息设置—系统管理{% endblock %}

{% block loading %}正在加载{{ academy.academyName }}的详细信息{% endblock %}

{% block right -%}
    <h1>
        查看学院信息
        <a href="{{ path('academy_index') }}">
            <img src="{{ asset('images/manage/back.png') }}" width="12" height="12" alt="返回学院信息列表" title="返回学院信息列表">
            <span>返回学院信息列表</span>
        </a>
    </h1>
    <div class="common-action">
        <a href="{{ path('academy_edit', { 'id': academy.id }) }}" class="btn btn-common-action">
            <img src="{{ asset('images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
            编辑
        </a>
        <a href="javascript:void(0)" class="delete-btn btn btn-common-action" academy-id="{{ academy.id }}">
            <img src="{{ asset('images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
            删除
        </a>
        <div id="delete-dialog_{{ academy.id }}" class="delete-dialog" title="删除确认" academy-id={{ academy.id }} hidden>
            <p>你确定要删除   <span class="dialog-item-key">{{academy.academyName}}</span>   的学院信息吗？</p>
        </div>
    </div>
    <table class="common-table">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ academy.id }}</td>
            </tr>
            <tr>
                <th>学院代号</th>
                <td>{{ academy.academyID }}</td>
            </tr>
            <tr>
                <th>学院名称</th>
                <td>{{ academy.academyName }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manage/system-manage/academy_show.js') }}"></script>
{% endblock %}