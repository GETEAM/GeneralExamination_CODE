{% extends 'SystemManageBundle:Grade:layout.html.twig' %}

{% block title %}查看年级信息—基本信息设置—系统管理{% endblock %}

{% block loading %}正在加载指定年级的详细信息……{% endblock %}

{% block right -%}
    <h1>
        查看年级信息
        <a href="{{ path('grade_index') }}">
            <img src="{{ asset('images/manage/back.png') }}" width="12" height="12" alt="返回年级信息列表" title="返回年级信息列表">
            <span>返回年级信息列表</span>
        </a>
    </h1>
    {% if grade %}
        <div class="common-action">
            <a href="{{ path('grade_edit', { 'id': grade.id }) }}" class="btn btn-common-action">
                <img src="{{ asset('images/manage/edit.png') }}" width="20" height="20" alt="编辑" title="编辑">
                编辑
            </a>
            <a href="javascript:void(0)" class="btn btn-common-action delete-btn" grade-id="{{ grade.id }}"> 
                <img src="{{ asset('images/manage/delete.png') }}" width="20" height="20" alt="删除" title="删除">
                删除
            </a>
            <div id="delete-dialog_{{ grade.id }}" class="delete-dialog" title="删除确认" grade-id={{ grade.id }} hidden>
                <p>确定要删除   <span class="dialog-item-key">{{grade.description}}</span>   年级信息吗？</p>
            </div>
        </div>
    {% endif %}
    <table class="common-table">
        <tbody>
            {% if grade=="" %}
                <tr>
                    <td>您指定的年级信息不存在，请您核实年级编号！</td>
                <tr>
            {% else %}
                <tr>
                    <th>编号</th>
                    <td>{{ grade.id }}</td>
                </tr>
                <tr>
                    <th>年级代号</th>
                    <td>{{ grade.grade }}</td>
                </tr>
                <tr>
                    <th>详细描述</th>
                    <td>{{ grade.description }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/manage/system-manage/grade_show.js') }}"></script>
{% endblock %}
